@{
    ViewData["Title"] = "Register Student";
    Layout = "~/Views/Shared/_AccountLayout/_Account.Layout.cshtml";
}

@model RegisterViewModel

<head>
    <link rel="stylesheet" href="~/css/Register/Register.css" asp-append-version="true" />
</head>

<div class="container">
    <div class="registration-container">


        <div class="school-header text-center mb-1">
            <img src="~/images/MinsuLogo.png" alt="School Logo" style="width: 100px; height: auto;" class="mb-2">
        </div>

        <div class="form-header">
            <h2><i class="fas fa-user-graduate me-2"></i>Register Account</h2>
            <p class="text-muted">Please fill in all required fields</p>
        </div>

        <form asp-controller="Account" asp-action="RegisterStudent">
            <div class="row mb-3">
                <div class="col-md-4 mb-3 mb-md-0">
                    <label class="form-label"><i class="fas fa-user me-1"></i>First Name</label>
                    <input type="text" asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <label class="form-label"><i class="fas fa-user me-1"></i>Middle Name</label>
                    <input type="text" asp-for="Middlename" class="form-control">
                    <span asp-validation-for="Middlename" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label"><i class="fas fa-user me-1"></i>Last Name</label>
                    <input type="text" asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-venus-mars me-1"></i>Gender</label>
                <select class="form-select" asp-for="Gender">
                    <option selected disabled>Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Prefer not to say</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>


            <div class="row mb-3">
                <div class="col-md-4 mb-3 mb-md-0">
                    <label class="form-label"><i class="fas fa-calendar-alt me-1"></i>Year of Birth</label>
                    <input type="number" asp-for="YearOfBirth" class="form-control" placeholder="e.g. 2005">
                    <span asp-validation-for="YearOfBirth" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <label class="form-label"><i class="fas fa-calendar-alt me-1"></i>Month of Birth</label>
                    <select class="form-select" asp-for="MonthOfBirth">
                        <option selected disabled>Select Month</option>
                        <option>January</option>
                        <option>February</option>
                        <option>March</option>
                        <option>April</option>
                        <option>May</option>
                        <option>June</option>
                        <option>July</option>
                        <option>August</option>
                        <option>September</option>
                        <option>October</option>
                        <option>November</option>
                        <option>December</option>
                    </select>
                    <span asp-validation-for="MonthOfBirth" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label"><i class="fas fa-calendar-alt me-1"></i>Date of Birth</label>
                    <input type="number" asp-for="DateOfBirth" class="form-control" placeholder="e.g. 15">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-md-8 mb-3 mb-md-0">
                    <label class="form-label"><i class="fas fa-map-marker-alt me-1"></i>Home Address</label>
                    <input type="text" asp-for="HomeAddress" class="form-control">
                    <span asp-validation-for="HomeAddress" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label"><i class="fas fa-mobile-alt me-1"></i>Mobile Number</label>
                    <input type="text" asp-for="MobileNumber" class="form-control">
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label"><i class="fas fa-envelope me-1"></i>Email</label>
                <input type="email" asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <label class="form-label"><i class="fas fa-book me-1"></i>Program</label>
                    <select class="form-select" asp-for="Program">
                        <option value="" selected disabled>Select your program</option>
                        <option value="cs">Computer Science</option>
                        <option value="it">Information Technology</option>
                        <option value="eng">Engineering</option>
                        <option value="bus">Business Administration</option>
                        <option value="nur">Nursing</option>
                        <option value="art">Arts and Humanities</option>
                    </select>
                    <span asp-validation-for="Program" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><i class="fas fa-layer-group me-1"></i>Year Level</label>
                    <select class="form-select" asp-for="YearLevel">
                        <option value="" selected disabled>Select year level</option>
                        <option value="1">First Year</option>
                        <option value="2">Second Year</option>
                        <option value="3">Third Year</option>
                        <option value="4">Fourth Year</option>
                        <option value="5">Fifth Year</option>
                    </select>
                    <span asp-validation-for="YearLevel" class="text-danger"></span>
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label"><i class="fas fa-id-card me-1"></i>Student ID</label>
                <input type="text" asp-for="StudentID" class="form-control">
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>


            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <label class="form-label"><i class="fas fa-lock me-1"></i>Password</label>
                    <input type="password" asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><i class="fas fa-lock me-1"></i>Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

 
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Login" class="btn btn-outline-secondary order-2 order-md-1">
                    <i class="fas fa-times me-1"></i>Cancel
                </a>
                <button type="submit" class="btn submit-btn text-white order-1 order-md-2" style="background-color: darkgreen;">
                    <i class="fas fa-user-plus me-2"></i>Sign up
                </button>
            </div>
        </form>
    </div>
</div>
