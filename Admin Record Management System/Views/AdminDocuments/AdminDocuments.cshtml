@{
    Layout = "~/Views/Shared/_AdminLayout/_AdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/AdminDocuments/AdminDocuments.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <h3 class="mb-3 mb-md-0">Admin Documents</h3>
        <a asp-controller="AddRecords" asp-action="AddRecords" class="btn btn-primary">
            Add Record
        </a>
    </div>

    <!-- Filters -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                <input type="text" id="searchName" class="form-control" placeholder="Search by document name..." onkeyup="filterTable()">
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-filter"></i></span>
                <select id="searchDocument" class="form-select" onchange="filterTable()">
                    <option value="">All Document Status</option>
                    <option value="Complete">Complete</option>
                    <option value="Pending">Pending</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle" id="submittedTable">
            <thead class="table-light text-center">
                <tr>
                    <th style="width: 30%">Documents Name</th>
                    <th style="width: 45%">Documents File</th>
                    <th style="width: 25%">Actions</th>
                </tr>
            </thead>
