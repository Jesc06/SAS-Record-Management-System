@{
    Layout = "~/Views/Shared/_AdminLayout/_AdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/AllRecords/AllRecords.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<div class="container py-4">

    <!-- Header with buttons -->

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <h3 class="table-title mb-0">Students Records</h3>
        <a asp-controller="AdminDocuments" asp-action="AdminDocuments" class="btn btn-dark">
           Admin Documents
        </a>
    </div>

    <!-- Filters -->
    <div class="row g-2 mb-4">
        <div class="col-12 col-md-4">
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                <input type="text" id="searchName" class="form-control" placeholder="Search by name..." onkeyup="filterTable()">
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-mortarboard"></i></span>
                <select id="searchProgram" class="form-select" onchange="filterTable()">
                    <option value="">All Programs</option>
                    <option value="Computer Science">Computer Science</option>
                    <option value="Business Administration">Business Administration</option>
                    <option value="Electrical Engineering">Electrical Engineering</option>
                    <option value="Biology">Biology</option>
                    <option value="Psychology">Psychology</option>
                </select>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-mortarboard"></i></span>
                <select id="searchProgram" class="form-select" onchange="filterTable()">
                    <option value="">Year Level</option>
                    <option value="First year">First year</option>
                    <option value="Second year">Second year</option>
                    <option value="Third year">Third year</option>
                    <option value="Fourth year">Fourth year</option>
                </select>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-file-earmark-check"></i></span>
                <select id="searchDocument" class="form-select" onchange="filterTable()">
                    <option value="">All Document Status</option>
                    <option value="Complete">Complete</option>
                    <option value="Pending">Pending</option>
                </select>
            </div>
        </div>
    </div>

